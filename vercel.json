{
  "builds": [
    { "src": "server/vercel.js", "use": "@vercel/node" },
    { "src": "build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/vercel.js" },
    { "src": "/(.*)", "dest": "build/index.html" }
  ],
  "rewrites": [{ "source": "/:path*", "destination": "/build/index.html" }]
}
